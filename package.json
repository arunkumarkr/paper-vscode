{
  "name": "paper-vscode",
  "displayName": "paper-vscode",
  "publisher": "paper-vscode",
  "description": "A notes + todo assitant for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:notesView",
    "onView:todoPanel",
    "onCommand:paper.deleteNote"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "paper-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "paper.newNote",
        "title": "New Note"
      },
      {
        "command": "paper.openNote",
        "title": "Open Note"
      },
      {
        "command": "paper.deleteNote",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "paper.newNote",
        "title": "New Note",
        "icon": "$(new-file)"
      },
      {
        "command": "paper.renameNote",
        "title": "Rename Note",
        "icon": "$(symbol-key)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "paperViewContainer",
          "title": "Paper",
          "icon": "$(pinned)"
        }
      ]
    },
    "views": {
      "paperViewContainer": [
        {
          "id": "notesView",
          "name": "Notes"
        },
        {
          "id": "todoPanel",
          "name": "Todo",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "paper.renameNote",
          "when": "view == notesView && viewItem == noteItem",
          "group": "inline"
        },
        {
          "command": "paper.deleteNote",
          "when": "view == notesView && viewItem == noteItem",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "paper.newNote",
          "when": "view == notesView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
